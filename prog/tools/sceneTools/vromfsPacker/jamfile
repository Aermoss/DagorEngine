Root    ?= ../../../.. ;
Location = prog/tools/sceneTools/vromfsPacker ;
include $(Root)/prog/tools/tools_setup.jam ;
ConsoleExe = yes ;
Exceptions = yes ;

TargetType  = exe ;
Target      = tools/vromfsPacker ;

include $(Root)/prog/_jBuild/defaults.jam ;

OutDir = $(Root)/tools/dagor3_cdk/util ;
if $(Platform) = win64 { OutDir = $(OutDir)64 ; }
if $(Platform) = linux64 { OutDir = $(OutDir)-linux64 ; }
if $(Platform) = macosx { OutDir = $(OutDir)-macosx ; }

AddIncludes =
  $(Root)/prog/tools/sharedInclude
  $(Root)/prog/gameLibs/publicInclude
;


Sources =
  cmain.cpp
;

UseProgLibs +=
  gameLibs/vromfsPacker
  engine2/kernel
  engine2/memory
  engine2/perfMon/daProfilerStub
  engine2/startup
  engine2/math
;

if $(Platform) in win32 win64 {
  AddLibs += advapi32.lib ;
} if $(Platform) in linux64 {
  AddLibs = -ldl ;
} else if $(Platform) in macosx {
  GlobalCPPopt = -Wno-deprecated-declarations ;
}
if $(Platform) = linux64 { UseProgLibs += engine2/osApiWrappers/messageBox/stub ; }

include $(Root)/prog/_jBuild/build.jam ;
